@model HospitalManagement.Models.Patient

@{
    ViewData["Title"] = "Supprimer le Patient";
}

<h2>@ViewData["Title"]</h2>
<link rel="stylesheet" href="~/css/patient-forms-style.css" />
<div class="alert alert-danger">
    Voulez-vous vraiment supprimer le patient <strong>@Model.Nom @Model.Prenom</strong> ?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="__RequestVerificationToken" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>