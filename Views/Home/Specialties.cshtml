@model IEnumerable<HospitalManagement.Models.Service>
@{
    ViewData["Title"] = "Nos Spécialités et Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/specialties.css" />
}

<!-- Page Header -->
<div class="specialties-header">
    <h1><i class="fas fa-stethoscope"></i> Nos Spécialités et Services</h1>
    <p>Découvrez tous nos services médicaux spécialisés</p>
</div>

<div class="specialties-container">
    <!-- Filter Section -->
    <div class="filter-section">
        <div class="filter-buttons">
            <button class="filter-btn active" onclick="filterSpecialties('all')">
                <i class="fas fa-th"></i> Tous
            </button>
            <button class="filter-btn" onclick="filterSpecialties('urgent')">
                <i class="fas fa-exclamation-circle"></i> Urgences
            </button>
            <button class="filter-btn" onclick="filterSpecialties('surgery')">
                <i class="fas fa-scalpel"></i> Chirurgie
            </button>
            <button class="filter-btn" onclick="filterSpecialties('pediatric')">
                <i class="fas fa-child"></i> Pédiatrie
            </button>
        </div>
    </div>

    <!-- Specialties Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="specialties-grid">
            @foreach (var service in Model)
            {
                <div class="specialty-card" data-category="all">
                    <div class="specialty-image">
                        @switch (service.Nom.ToLower())
                        {
                            case "cardiologie":
                                <i class="fas fa-heart"></i>
                                break;
                            case "pédiatrie":
                                <i class="fas fa-child"></i>
                                break;
                            case "urgences":
                                <i class="fas fa-ambulance"></i>
                                break;
                            case "chirurgie générale":
                                <i class="fas fa-scalpel"></i>
                                break;
                            case "orthopédie":
                                <i class="fas fa-bone"></i>
                                break;
                            case "dermatologie":
                                <i class="fas fa-spa"></i>
                                break;
                            default:
                                <i class="fas fa-hospital"></i>
                                break;
                        }
                    </div>

                    <div class="specialty-content">
                        <h3 class="specialty-title">@service.Nom</h3>
                        <p class="specialty-description">@service.Description</p>

                        <div class="specialty-info">
                            <div class="info-item">
                                <i class="fas fa-door-open"></i>
                                <span><strong>Capacité:</strong> @service.CapaciteAccueil personnes</span>
                            </div>
                            @if (!string.IsNullOrEmpty(service.Emplacement))
                            {
                                <div class="info-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><strong>Emplacement:</strong> @service.Emplacement</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(service.Telephone))
                            {
                                <div class="info-item">
                                    <i class="fas fa-phone"></i>
                                    <span><strong>Tél:</strong> @service.Telephone</span>
                                </div>
                            }
                            <div class="info-item">
                                <i class="fas fa-user-md"></i>
                                <span><strong>Médecins:</strong> @(service.Medecins?.Count ?? 0)</span>
                            </div>
                        </div>

                        <div class="specialty-actions">
                            <a href="/RendezVous/Create" class="btn-specialty btn-primary-specialty">
                                <i class="fas fa-calendar-plus"></i> Rendez-vous
                            </a>
                            <button class="btn-specialty btn-secondary-specialty" onclick="showDetails('@service.Nom')">
                                <i class="fas fa-info-circle"></i> Détails
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div style="text-align: center; padding: 3rem; background: white; border-radius: 12px;">
            <i class="fas fa-inbox" style="font-size: 3rem; color: var(--primary); margin-bottom: 1rem;"></i>
            <h3 style="color: var(--dark);">Aucun service disponible</h3>
            <p style="color: #666;">Les services seront bientôt disponibles.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function showDetails(specialtyName) {
            alert(`Détails de ${specialtyName}\n\nPour plus d'informations, veuillez contacter notre service ou prendre rendez-vous.`);
        }
    </script>
}
