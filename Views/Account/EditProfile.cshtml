@model HospitalManagement.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Modifier le Profil";
}

@section Styles {
    <style>
        :root {
            --primary: #0066cc;
            --primary-light: #e6f2ff;
            --primary-dark: #004a99;
            --secondary: #00a3e0;
            --success: #28a745;
            --danger: #dc3545;
            --dark: #2c3e50;
            --border: #e0e6ed;
        }

        body {
            background-color: #f0f4f8;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .edit-profile-container {
            max-width: 700px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .edit-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .edit-header h1 {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .edit-header p {
            color: #666;
            font-size: 1rem;
        }

        .edit-form-card {
            background: white;
            border-radius: 12px;
            padding: 2.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border-top: 4px solid var(--primary);
        }

        .form-group {
            margin-bottom: 1.75rem;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
        }

        .form-group label i {
            color: var(--primary);
            margin-right: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.95rem 1.25rem;
            border: 2px solid var(--border);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: white;
            color: var(--dark);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
        }

        .form-control::placeholder {
            color: #999;
        }

        .validation-message {
            color: var(--danger);
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2.5rem;
        }

        .btn-custom {
            flex: 1;
            padding: 0.95rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-save {
            background: var(--primary);
            color: white;
            box-shadow: 0 2px 8px rgba(0, 102, 204, 0.2);
        }

        .btn-save:hover {
            background: var(--primary-dark);
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.3);
            transform: translateY(-2px);
        }

        .btn-cancel {
            background: white;
            color: var(--primary);
            border: 2px solid var(--primary);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .btn-cancel:hover {
            background: var(--primary-light);
            transform: translateY(-2px);
        }

        .form-info {
            background: var(--primary-light);
            border-left: 4px solid var(--primary);
            padding: 1.25rem;
            border-radius: 8px;
            margin-bottom: 2rem;
            display: flex;
            gap: 1rem;
        }

        .form-info i {
            color: var(--primary);
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .form-info-content h4 {
            margin: 0 0 0.25rem 0;
            color: var(--dark);
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-info-content p {
            margin: 0;
            color: #666;
            font-size: 0.9rem;
        }

        @@media (max-width: 768px) {
            .edit-header h1 {
                font-size: 1.5rem;
            }

            .edit-form-card {
                padding: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-custom {
                width: 100%;
            }
        }
    </style>
}

<div class="edit-profile-container">
    <div class="edit-header">
        <h1><i class="fas fa-user-edit"></i> Modifier Mon Profil</h1>
        <p>Mettez à jour vos informations personnelles</p>
    </div>

    <div class="edit-form-card">
        <div class="form-info">
            <i class="fas fa-info-circle"></i>
            <div class="form-info-content">
                <h4>Information</h4>
                <p>Assurez-vous que vos informations sont à jour pour une meilleure communication.</p>
            </div>
        </div>

        <form method="post" asp-action="EditProfile">
            <div class="form-group">
                <label asp-for="Nom">
                    <i class="fas fa-user"></i> Nom
                </label>
                <input type="text" asp-for="Nom" class="form-control" placeholder="Entrez votre nom" />
                <span asp-validation-for="Nom" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prenom">
                    <i class="fas fa-user"></i> Prénom
                </label>
                <input type="text" asp-for="Prenom" class="form-control" placeholder="Entrez votre prénom" />
                <span asp-validation-for="Prenom" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">
                    <i class="fas fa-envelope"></i> Email
                </label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Entrez votre email" />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telephone">
                    <i class="fas fa-phone"></i> Téléphone
                </label>
                <input type="tel" asp-for="Telephone" class="form-control" placeholder="Entrez votre numéro de téléphone" />
                <span asp-validation-for="Telephone" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-custom btn-save">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-controller="Account" asp-action="Profile" class="btn-custom btn-cancel">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>
