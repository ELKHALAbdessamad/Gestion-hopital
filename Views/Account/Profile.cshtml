@model HospitalManagement.Models.ApplicationUser
@{
    ViewData["Title"] = "Mon Profil";
}

@section Styles {
    <style>
        :root {
            --primary: #0066cc;
            --primary-light: #e6f2ff;
            --primary-dark: #004a99;
            --secondary: #00a3e0;
            --success: #28a745;
            --danger: #dc3545;
            --warning: #ffc107;
            --info: #17a2b8;
            --dark: #2c3e50;
            --light: #f5f7fa;
            --border: #e0e6ed;
        }

        body {
            background-color: #f0f4f8;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .profile-container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        /* Page Transition Animation */
        @@keyframes pageEnter {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes pageExit {
            from {
                opacity: 1;
                transform: translateY(0);
            }
            to {
                opacity: 0;
                transform: translateY(-30px);
            }
        }

        .profile-container {
            animation: pageEnter 0.6s ease-out;
        }

        /* Profile Header */
        .profile-header {
            background: white;
            border-radius: 12px;
            padding: 2.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            border-top: 4px solid var(--primary);
            animation: slideInDown 0.6s ease-out 0.1s backwards;
        }

        @@keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .profile-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary), var(--primary));
            animation: shimmer 3s infinite;
        }

        @@keyframes shimmer {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .profile-content {
            display: flex;
            gap: 2.5rem;
            align-items: flex-start;
        }

        .profile-avatar-section {
            flex-shrink: 0;
            text-align: center;
            animation: slideInLeft 0.6s ease-out 0.2s backwards;
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .profile-avatar {
            width: 160px;
            height: 160px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3.5rem;
            color: white;
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.2);
            margin: 0 auto 1rem;
            position: relative;
            transition: all 0.3s ease;
        }

        .profile-avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 24px rgba(0, 102, 204, 0.3);
        }

        .profile-avatar::after {
            content: '';
            position: absolute;
            inset: -2px;
            border-radius: 12px;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .profile-avatar:hover::after {
            opacity: 0.5;
        }

        .profile-status {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: #e8f5e9;
            color: var(--success);
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            animation: slideInUp 0.6s ease-out 0.3s backwards;
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .profile-status i {
            font-size: 1rem;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }

        .profile-info {
            flex: 1;
            animation: slideInRight 0.6s ease-out 0.2s backwards;
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .profile-name {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .profile-role {
            font-size: 1rem;
            color: var(--secondary);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
        }

        .profile-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
        }

        .stat {
            text-align: center;
            animation: fadeInUp 0.6s ease-out backwards;
        }

        .stat:nth-child(1) { animation-delay: 0.3s; }
        .stat:nth-child(2) { animation-delay: 0.4s; }
        .stat:nth-child(3) { animation-delay: 0.5s; }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
            transition: all 0.3s ease;
        }

        .stat:hover .stat-value {
            transform: scale(1.1);
            color: var(--secondary);
        }

        .stat-label {
            font-size: 0.85rem;
            color: #666;
            margin-top: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Profile Details */
        .profile-details {
            background: white;
            border-radius: 12px;
            padding: 2.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            border-left: 4px solid var(--primary);
            animation: slideInUp 0.6s ease-out 0.3s backwards;
        }

        .details-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .details-title i {
            color: var(--primary);
            font-size: 1.5rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 1.25rem;
            padding: 1.25rem;
            margin-bottom: 1rem;
            background: var(--primary-light);
            border-radius: 10px;
            border-left: 3px solid var(--primary);
            transition: all 0.3s ease;
            animation: fadeInLeft 0.6s ease-out backwards;
        }

        .detail-item:nth-child(1) { animation-delay: 0.4s; }
        .detail-item:nth-child(2) { animation-delay: 0.5s; }
        .detail-item:nth-child(3) { animation-delay: 0.6s; }
        .detail-item:nth-child(4) { animation-delay: 0.7s; }

        @@keyframes fadeInLeft {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .detail-item:hover {
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.15);
            transform: translateX(5px);
            background: linear-gradient(135deg, var(--primary-light), rgba(0, 163, 224, 0.1));
        }

        .detail-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            background: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            flex-shrink: 0;
            transition: all 0.3s ease;
        }

        .detail-item:hover .detail-icon {
            transform: rotate(10deg) scale(1.1);
            background: var(--secondary);
        }

        .detail-content h4 {
            font-size: 0.8rem;
            color: #999;
            margin: 0 0 0.25rem 0;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
        }

        .detail-content p {
            font-size: 1rem;
            color: var(--dark);
            margin: 0;
            font-weight: 600;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            animation: slideInUp 0.6s ease-out 0.5s backwards;
        }

        .btn-custom {
            flex: 1;
            padding: 0.95rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            position: relative;
            overflow: hidden;
        }

        .btn-custom::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-custom:active::before {
            width: 300px;
            height: 300px;
        }

        .btn-primary-custom {
            background: var(--primary);
            color: white;
            box-shadow: 0 2px 8px rgba(0, 102, 204, 0.2);
        }

        .btn-primary-custom:hover {
            background: var(--primary-dark);
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.3);
            transform: translateY(-2px);
        }

        .btn-secondary-custom {
            background: white;
            color: var(--primary);
            border: 2px solid var(--primary);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .btn-secondary-custom:hover {
            background: var(--primary-light);
            transform: translateY(-2px);
        }

        @@media (max-width: 768px) {
            .profile-content {
                flex-direction: column;
                gap: 1.5rem;
            }

            .profile-avatar {
                width: 140px;
                height: 140px;
                font-size: 3rem;
            }

            .profile-name {
                font-size: 1.5rem;
            }

            .profile-stats {
                grid-template-columns: repeat(2, 1fr);
            }

            .action-buttons {
                flex-direction: column;
            }

            .profile-header,
            .profile-details {
                padding: 1.5rem;
            }
        }
    </style>
}

<div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-content">
            <div class="profile-avatar-section">
                <div class="profile-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="badge-custom">
                    <i class="fas fa-check-circle"></i> Profil Actif
                </div>
            </div>

            <div class="profile-info">
                <h1 class="profile-name">@(Model?.Prenom ?? "Utilisateur") @(Model?.Nom ?? "")</h1>
                <p class="profile-role">
                    <i class="fas fa-hospital"></i>
                    @if (Model?.Patient != null)
                    {
                        <span>Patient</span>
                    }
                    else if (Model?.Medecin != null)
                    {
                        <span>Médecin</span>
                    }
                    else
                    {
                        <span>Utilisateur</span>
                    }
                </p>

                <div class="profile-stats">
                    <div class="stat">
                        <div class="stat-value">@(Model?.Patient?.RendezVous?.Count ?? 0)</div>
                        <div class="stat-label">Rendez-vous</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value">@(Model?.Patient?.DossiersMedicaux?.Count ?? 0)</div>
                        <div class="stat-label">Dossiers</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value">@(Model?.Medecin?.RendezVous?.Count ?? 0)</div>
                        <div class="stat-label">Consultations</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Profile Details -->
    <div class="profile-details">
        <h2 class="details-title">
            <i class="fas fa-info-circle"></i> Informations Personnelles
        </h2>

        <div class="detail-item">
            <div class="detail-icon">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="detail-content">
                <h4>Email</h4>
                <p>@(Model?.Email ?? "Non disponible")</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model?.PhoneNumber))
        {
            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="detail-content">
                    <h4>Téléphone</h4>
                    <p>@Model.PhoneNumber</p>
                </div>
            </div>
        }

        @if (Model?.Patient != null)
        {
            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-birthday-cake"></i>
                </div>
                <div class="detail-content">
                    <h4>Date de Naissance</h4>
                    <p>@Model.Patient.DateNaissance.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="detail-content">
                    <h4>Adresse</h4>
                    <p>@(Model.Patient.Adresse ?? "Non disponible")</p>
                </div>
            </div>
        }

        @if (Model?.Medecin != null)
        {
            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-stethoscope"></i>
                </div>
                <div class="detail-content">
                    <h4>Spécialité</h4>
                    <p>@(Model.Medecin.Specialite ?? "Non disponible")</p>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-hospital"></i>
                </div>
                <div class="detail-content">
                    <h4>Service</h4>
                    <p>@(Model.Medecin.Service?.Nom ?? "Non disponible")</p>
                </div>
            </div>
        }
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a asp-controller="Account" asp-action="EditProfile" class="btn-custom btn-primary-custom">
            <i class="fas fa-edit"></i> Modifier le Profil
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn-custom btn-secondary-custom">
            <i class="fas fa-arrow-left"></i> Retour au Dashboard
        </a>
    </div>
</div>
