@model HospitalManagement.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Inscription";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary: #0066cc;
            --primary-light: #e6f2ff;
            --primary-dark: #004a99;
            --secondary: #00a3e0;
            --success: #28a745;
            --danger: #dc3545;
            --dark: #2c3e50;
            --light: #f5f7fa;
            --border: #e0e6ed;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f0f4f8 0%, #e6f2ff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .register-container {
            width: 100%;
            max-width: 600px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 102, 204, 0.15);
            overflow: hidden;
            animation: slideIn 0.6s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .register-header {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            padding: 2rem;
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .register-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .register-header h2 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 1;
        }

        .register-header p {
            opacity: 0.95;
            font-size: 0.95rem;
            position: relative;
            z-index: 1;
        }

        .register-body {
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            animation: slideInUp 0.6s ease-out backwards;
        }

        .form-group:nth-child(1) { animation-delay: 0.1s; }
        .form-group:nth-child(2) { animation-delay: 0.2s; }
        .form-group:nth-child(3) { animation-delay: 0.3s; }
        .form-group:nth-child(4) { animation-delay: 0.4s; }
        .form-group:nth-child(5) { animation-delay: 0.5s; }
        .form-group:nth-child(6) { animation-delay: 0.6s; }
        .form-group:nth-child(7) { animation-delay: 0.7s; }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
        }

        .form-group label i {
            color: var(--primary);
            margin-right: 0.5rem;
        }

        .form-control, .form-select {
            width: 100%;
            padding: 0.95rem 1.25rem;
            border: 2px solid var(--border);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: white;
            color: var(--dark);
            font-family: inherit;
        }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
        }

        .form-control::placeholder {
            color: #999;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .form-row .form-group {
            margin-bottom: 0;
        }

        .validation-message {
            color: var(--danger);
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .validation-message::before {
            content: '⚠ ';
        }

        .validation-summary {
            background: #ffe6e6;
            border-left: 4px solid var(--danger);
            color: var(--danger);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            animation: slideInUp 0.6s ease-out;
        }

        .form-text {
            display: block;
            margin-top: 0.5rem;
            font-size: 0.85rem;
            color: #999;
        }

        .btn-register {
            width: 100%;
            padding: 1rem;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.2);
            margin-top: 1rem;
            animation: slideInUp 0.6s ease-out 0.8s backwards;
        }

        .btn-register:hover {
            background: var(--primary-dark);
            box-shadow: 0 6px 16px rgba(0, 102, 204, 0.3);
            transform: translateY(-2px);
        }

        .btn-register:active {
            transform: translateY(0);
        }

        .register-footer {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
            animation: slideInUp 0.6s ease-out 0.9s backwards;
        }

        .register-footer p {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .register-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .register-footer a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

        @@media (max-width: 768px) {
            .register-body {
                padding: 1.5rem;
            }

            .register-header h2 {
                font-size: 1.5rem;
            }

            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h2><i class="fas fa-user-plus"></i> Créer un Compte</h2>
            <p>Rejoignez HospitalManagement</p>
        </div>

        <div class="register-body">
            <form asp-action="Register" method="post">
                @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                {
                    <div class="validation-summary">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Veuillez corriger les erreurs ci-dessous</span>
                    </div>
                }

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Nom">
                            <i class="fas fa-user"></i> Nom
                        </label>
                        <input asp-for="Nom" class="form-control" placeholder="Votre nom" />
                        <span asp-validation-for="Nom" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Prenom">
                            <i class="fas fa-user"></i> Prénom
                        </label>
                        <input asp-for="Prenom" class="form-control" placeholder="Votre prénom" />
                        <span asp-validation-for="Prenom" class="validation-message"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email">
                        <i class="fas fa-envelope"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="exemple@email.com" />
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telephone">
                        <i class="fas fa-phone"></i> Téléphone
                    </label>
                    <input asp-for="Telephone" class="form-control" placeholder="+212 6XX XXX XXX" />
                    <span asp-validation-for="Telephone" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Role">
                        <i class="fas fa-user-tag"></i> Type de Compte
                    </label>
                    <select asp-for="Role" class="form-select">
                        <option value="Patient">Patient</option>
                        <option value="Medecin">Médecin</option>
                        <option value="Receptionniste">Réceptionniste</option>
                        <option value="Admin">Administrateur</option>
                    </select>
                    <small class="form-text">Sélectionnez "Patient" pour un compte standard</small>
                    <span asp-validation-for="Role" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">
                        <i class="fas fa-lock"></i> Mot de passe
                    </label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                    <small class="form-text">Minimum 6 caractères</small>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">
                        <i class="fas fa-lock"></i> Confirmer le Mot de passe
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>

                <button type="submit" class="btn-register">
                    <i class="fas fa-user-plus"></i> S'inscrire
                </button>

                <div class="register-footer">
                    <p>Déjà un compte ?</p>
                    <a asp-action="Login">Se connecter</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
