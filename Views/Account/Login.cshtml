@model HospitalManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary: #0066cc;
            --primary-light: #e6f2ff;
            --primary-dark: #004a99;
            --secondary: #00a3e0;
            --success: #28a745;
            --danger: #dc3545;
            --dark: #2c3e50;
            --light: #f5f7fa;
            --border: #e0e6ed;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f0f4f8 0%, #e6f2ff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .login-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0;
            width: 100%;
            max-width: 1000px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 102, 204, 0.15);
            overflow: hidden;
            animation: slideIn 0.6s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Left Side - Branding */
        .login-branding {
            background: linear-gradient(135deg, rgba(0, 102, 204, 0.85) 0%, rgba(0, 74, 153, 0.85) 100%), 
                        url('https://images.unsplash.com/photo-1576091160550-2173dba999ef?w=600&h=800&fit=crop') center/cover;
            padding: 3rem 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .login-branding::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        .login-branding::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -30%;
            width: 250px;
            height: 250px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite reverse;
        }

        .branding-content {
            position: relative;
            z-index: 1;
            text-align: center;
        }

        .hospital-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .branding-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .branding-subtitle {
            font-size: 1rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        .branding-features {
            text-align: left;
            margin-top: 2rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            opacity: 0.95;
        }

        .feature-item i {
            font-size: 1.25rem;
            width: 30px;
            text-align: center;
        }

        .feature-item span {
            font-size: 0.95rem;
        }

        /* Right Side - Form */
        .login-form-section {
            padding: 3rem 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-form-header {
            margin-bottom: 2rem;
            animation: slideInRight 0.6s ease-out 0.2s backwards;
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .login-form-header h2 {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .login-form-header p {
            color: #666;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            animation: slideInRight 0.6s ease-out backwards;
        }

        .form-group:nth-child(1) { animation-delay: 0.3s; }
        .form-group:nth-child(2) { animation-delay: 0.4s; }
        .form-group:nth-child(3) { animation-delay: 0.5s; }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
        }

        .form-group label i {
            color: var(--primary);
            margin-right: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.95rem 1.25rem;
            border: 2px solid var(--border);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: white;
            color: var(--dark);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
        }

        .form-control::placeholder {
            color: #999;
        }

        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
            animation: slideInRight 0.6s ease-out 0.6s backwards;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin-right: 0.75rem;
            cursor: pointer;
            accent-color: var(--primary);
        }

        .form-check-label {
            cursor: pointer;
            color: var(--dark);
            font-size: 0.95rem;
            margin: 0;
        }

        .validation-message {
            color: var(--danger);
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .validation-message::before {
            content: '⚠ ';
        }

        .validation-summary {
            background: #ffe6e6;
            border-left: 4px solid var(--danger);
            color: var(--danger);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            animation: slideInRight 0.6s ease-out 0.2s backwards;
        }

        .btn-login {
            width: 100%;
            padding: 1rem;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.2);
            animation: slideInRight 0.6s ease-out 0.7s backwards;
        }

        .btn-login:hover {
            background: var(--primary-dark);
            box-shadow: 0 6px 16px rgba(0, 102, 204, 0.3);
            transform: translateY(-2px);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .login-footer {
            text-align: center;
            margin-top: 1.5rem;
            animation: slideInRight 0.6s ease-out 0.8s backwards;
        }

        .login-footer p {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .login-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .login-footer a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .login-container {
                grid-template-columns: 1fr;
                max-width: 100%;
                margin: 1rem;
                border-radius: 12px;
            }

            .login-branding {
                padding: 2rem;
                min-height: 250px;
            }

            .branding-title {
                font-size: 1.5rem;
            }

            .hospital-icon {
                font-size: 3rem;
            }

            .login-form-section {
                padding: 2rem;
            }

            .login-form-header h2 {
                font-size: 1.5rem;
            }

            .branding-features {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Side - Branding -->
        <div class="login-branding">
            <div class="branding-content">
                <div class="hospital-icon">
                    <i class="fas fa-hospital"></i>
                </div>
                <h1 class="branding-title">HospitalManagement</h1>
                <p class="branding-subtitle">Système de Gestion Hospitalière</p>

                <div class="branding-features">
                    <div class="feature-item">
                        <i class="fas fa-users"></i>
                        <span>Gestion des Patients</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-stethoscope"></i>
                        <span>Suivi Médical</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-calendar-check"></i>
                        <span>Rendez-vous</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-file-medical"></i>
                        <span>Dossiers Médicaux</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="login-form-section">
            <div class="login-form-header">
                <h2>Connexion</h2>
                <p>Accédez à votre compte HospitalManagement</p>
            </div>

            <form asp-action="Login" method="post">
                @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                {
                    <div class="validation-summary">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Veuillez vérifier vos identifiants</span>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Email">
                        <i class="fas fa-envelope"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="exemple@email.com" />
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">
                        <i class="fas fa-lock"></i> Mot de passe
                    </label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMe">
                        Se souvenir de moi
                    </label>
                </div>

                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Se connecter
                </button>

                <div class="login-footer">
                    <p>Pas encore de compte ?</p>
                    <a asp-action="Register">Créer un compte</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
