@model HospitalManagement.Models.RendezVous
@{
    ViewData["Title"] = "Détails du Rendez-Vous";

    var statutClass = Model.Statut switch
    {
        "Planifié" => "bg-secondary",
        "Confirmé" => "bg-primary",
        "En cours" => "bg-warning text-dark",
        "Terminé" => "bg-success",
        "Annulé" => "bg-danger",
        _ => "bg-secondary"
    };
}

<h2>@ViewData["Title"]</h2>
<link rel="stylesheet" href="~/css/rdv-details-style.css" />
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-check"></i> Informations du Rendez-Vous
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4"><i class="fas fa-calendar"></i> Date et Heure</dt>
                    <dd class="col-sm-8">
                        <strong>@Model.DateHeure.ToString("dddd dd MMMM yyyy")</strong> à <strong>@Model.DateHeure.ToString("HH:mm")</strong>
                    </dd>

                    <dt class="col-sm-4"><i class="fas fa-info-circle"></i> Statut</dt>
                    <dd class="col-sm-8">
                        <span class="badge @statutClass">@Model.Statut</span>
                    </dd>

                    <dt class="col-sm-4"><i class="fas fa-clock"></i> Durée</dt>
                    <dd class="col-sm-8">@Model.Duree minutes</dd>

                    <dt class="col-sm-4"><i class="fas fa-calendar-plus"></i> Date de création</dt>
                    <dd class="col-sm-8">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>

                <hr />

                <h6 class="mt-3"><i class="fas fa-user"></i> Patient</h6>
                <dl class="row">
                    <dt class="col-sm-4">Nom complet</dt>
                    <dd class="col-sm-8">@(Model.Patient?.Nom ?? "N/A") @(Model.Patient?.Prenom ?? "")</dd>

                    @if (!string.IsNullOrEmpty(Model.Patient?.Telephone))
                    {
                        <dt class="col-sm-4">Téléphone</dt>
                        <dd class="col-sm-8">
                            <a href="tel:@Model.Patient.Telephone">@Model.Patient.Telephone</a>
                        </dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Patient?.Email))
                    {
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.Patient.Email">@Model.Patient.Email</a>
                        </dd>
                    }
                </dl>

                <hr />

                <h6 class="mt-3"><i class="fas fa-user-md"></i> Médecin</h6>
                <dl class="row">
                    <dt class="col-sm-4">Nom complet</dt>
                    <dd class="col-sm-8">Dr. @(Model.Medecin?.Nom ?? "N/A") @(Model.Medecin?.Prenom ?? "")</dd>

                    <dt class="col-sm-4">Spécialité</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@(Model.Medecin?.Specialite ?? "N/A")</span>
                    </dd>

                    @if (Model.Medecin?.Service != null)
                    {
                        <dt class="col-sm-4">Service</dt>
                        <dd class="col-sm-8">@Model.Medecin.Service.Nom</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Medecin?.Email))
                    {
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.Medecin.Email">@Model.Medecin.Email</a>
                        </dd>
                    }
                </dl>

                @if (!string.IsNullOrEmpty(Model.Motif) || !string.IsNullOrEmpty(Model.Notes))
                {
                    <hr />

                    @if (!string.IsNullOrEmpty(Model.Motif))
                    {
                        <h6 class="mt-3"><i class="fas fa-clipboard"></i> Motif</h6>
                        <p class="ms-3">@Model.Motif</p>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <h6 class="mt-3"><i class="fas fa-sticky-note"></i> Notes</h6>
                        <p class="ms-3">@Model.Notes</p>
                    }
                }
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i> Supprimer
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h6 class="mb-0"><i class="fas fa-link"></i> Liens rapides</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.Patient != null)
                    {
                        <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-user"></i> Voir le dossier patient
                        </a>
                    }

                    @if (Model.Medecin != null)
                    {
                        <a asp-controller="Medecins" asp-action="Details" asp-route-id="@Model.MedecinId" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-user-md"></i> Voir le profil du médecin
                        </a>
                    }

                    <a asp-action="ByPatient" asp-route-patientId="@Model.PatientId" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-history"></i> Historique du patient
                    </a>

                    <a asp-action="ByMedecin" asp-route-medecinId="@Model.MedecinId" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-calendar-alt"></i> Agenda du médecin
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>