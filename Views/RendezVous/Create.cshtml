@model HospitalManagement.Models.RendezVous
@{
    ViewData["Title"] = "Ajouter un Rendez-Vous";
}

<h2>@ViewData["Title"]</h2>
<link rel="stylesheet" href="~/css/rdv-forms-style.css" />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="PatientId" class="form-label">Patient <span class="text-danger">*</span></label>
                <select asp-for="PatientId" class="form-select" required>
                    <option value="">-- Sélectionner un patient --</option>
                    @foreach (var patient in ViewBag.Patients ?? new List<object>())
                    {
                        <option value="@patient.Id">@patient.Nom @patient.Prenom</option>
                    }
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MedecinId" class="form-label">Médecin <span class="text-danger">*</span></label>
                <select asp-for="MedecinId" class="form-select" required>
                    <option value="">-- Sélectionner un médecin --</option>
                    @foreach (var medecin in ViewBag.Medecins ?? new List<object>())
                    {
                        <option value="@medecin.Id">Dr. @medecin.Nom @medecin.Prenom (@medecin.Specialite)</option>
                    }
                </select>
                <span asp-validation-for="MedecinId" class="text-danger"></span>
            </div>

            <!-- ✅ NOUVEAU : Date au format YYYY-MM-DD -->
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="DateRendezVous" class="form-label">Date <span class="text-danger">*</span></label>
                        <input type="date"
                               id="DateRendezVous"
                               name="DateRendezVous"
                               class="form-control"
                               value="@ViewBag.DateRendezVousSaisie"
                               required />
                        <small class="form-text text-muted">Format: AAAA-MM-JJ</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="HeureRendezVous" class="form-label">Heure <span class="text-danger">*</span></label>
                        <input type="time"
                               id="HeureRendezVous"
                               name="HeureRendezVous"
                               class="form-control"
                               value="@ViewBag.HeureRendezVousSaisie"
                               required />
                        <small class="form-text text-muted">Format: HH:mm</small>
                    </div>
                </div>
            </div>
            @if (ViewData.ModelState["DateHeure"]?.Errors.Count > 0)
            {
                <div class="text-danger mb-3">
                    @ViewData.ModelState["DateHeure"].Errors[0].ErrorMessage
                </div>
            }

            <div class="mb-3">
                <label asp-for="Statut" class="form-label">Statut <span class="text-danger">*</span></label>
                <select asp-for="Statut" class="form-select" required>
                    <option value="Planifié">Planifié</option>
                    <option value="Confirmé">Confirmé</option>
                    <option value="En cours">En cours</option>
                    <option value="Terminé">Terminé</option>
                    <option value="Annulé">Annulé</option>
                </select>
                <span asp-validation-for="Statut" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duree" class="form-label">Durée (minutes)</label>
                <input asp-for="Duree" type="number" class="form-control" min="15" max="180" value="30" />
                <span asp-validation-for="Duree" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Motif" class="form-label">Motif</label>
                <textarea asp-for="Motif" class="form-control" rows="2" placeholder="Motif de la consultation"></textarea>
                <span asp-validation-for="Motif" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Notes additionnelles"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}