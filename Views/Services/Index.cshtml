@model IEnumerable<HospitalManagement.Models.Service>

@{
    ViewData["Title"] = "Gestion des Services";
}

@section Styles {
    <style>
        .services-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .service-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border-top: 4px solid var(--primary);
            transition: all 0.3s ease;
            animation: slideInUp 0.6s ease-out backwards;
        }

        .service-card:nth-child(1) { animation-delay: 0.1s; }
        .service-card:nth-child(2) { animation-delay: 0.2s; }
        .service-card:nth-child(3) { animation-delay: 0.3s; }
        .service-card:nth-child(4) { animation-delay: 0.4s; }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .service-card:hover {
            box-shadow: 0 8px 24px rgba(0, 102, 204, 0.15);
            transform: translateY(-5px);
        }

        .service-card-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .service-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .service-card-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--dark);
            margin: 0;
        }

        .service-card-info {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--border);
        }

        .service-info-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.9rem;
            color: #666;
        }

        .service-info-item i {
            color: var(--primary);
            width: 20px;
            text-align: center;
        }

        .service-info-label {
            font-weight: 600;
            color: var(--dark);
        }

        .service-card-actions {
            display: flex;
            gap: 0.5rem;
            justify-content: space-between;
        }

        .service-card-actions .btn {
            flex: 1;
            padding: 0.6rem 0.75rem;
            font-size: 0.85rem;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .empty-state-icon {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .empty-state h3 {
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #666;
            margin-bottom: 1.5rem;
        }
    </style>
}

<!-- Page Header avec Image -->
<div class="page-header-with-bg services-page-bg">
    <h1><i class="fas fa-hospital"></i> Gestion des Services</h1>
    <p>Gérez les services médicaux et leurs configurations</p>
</div>

<!-- Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header Actions -->
<div class="services-header">
    <h3 style="margin: 0; color: var(--dark); font-weight: 700;">Services Disponibles</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un Service
    </a>
</div>

<!-- Services Grid -->
@if (Model != null && Model.Any())
{
    <div class="services-grid">
        @foreach (var service in Model)
        {
            <div class="service-card">
                <div class="service-card-header">
                    <div class="service-icon">
                        <i class="fas fa-clinic-medical"></i>
                    </div>
                    <h4 class="service-card-title">@service.Nom</h4>
                </div>

                <div class="service-card-info">
                    @if (!string.IsNullOrEmpty(service.Description))
                    {
                        <div class="service-info-item">
                            <i class="fas fa-info-circle"></i>
                            <span>@service.Description</span>
                        </div>
                    }

                    <div class="service-info-item">
                        <i class="fas fa-door-open"></i>
                        <span><span class="service-info-label">Capacité:</span> @service.CapaciteAccueil personnes</span>
                    </div>

                    @if (!string.IsNullOrEmpty(service.Emplacement))
                    {
                        <div class="service-info-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><span class="service-info-label">Emplacement:</span> @service.Emplacement</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(service.Telephone))
                    {
                        <div class="service-info-item">
                            <i class="fas fa-phone"></i>
                            <span><span class="service-info-label">Tél:</span> @service.Telephone</span>
                        </div>
                    }

                    <div class="service-info-item">
                        <i class="fas fa-user-md"></i>
                        <span><span class="service-info-label">Médecins:</span> @(service.Medecins?.Count() ?? 0)</span>
                    </div>
                </div>

                <div class="service-card-actions">
                    <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-info btn-sm" title="Détails">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-primary btn-sm" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger btn-sm" title="Supprimer">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-hospital"></i>
        </div>
        <h3>Aucun service trouvé</h3>
        <p>Il n'y a pas encore de services enregistrés dans le système.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Créer le Premier Service
        </a>
    </div>
}
