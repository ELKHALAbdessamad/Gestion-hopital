@model HospitalManagement.Models.Service

@{
    ViewData["Title"] = "Supprimer un Service";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <p>Êtes-vous sûr de vouloir supprimer ce service ?</p>
    <p><strong>@Model.Nom</strong></p>
    <p><strong>Nombre de Médecins:</strong> @Model.Medecins?.Count() ?? 0</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
