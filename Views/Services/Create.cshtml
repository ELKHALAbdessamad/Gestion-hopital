@model HospitalManagement.Models.Service

@{
    ViewData["Title"] = "Ajouter un Service";
}

@section Styles {
    <style>
        .form-container {
            max-width: 700px;
            margin: 0 auto;
        }

        .form-card {
            background: white;
            border-radius: 12px;
            padding: 2.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border-top: 4px solid var(--primary);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .form-row.full {
            grid-template-columns: 1fr;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .form-actions .btn {
            flex: 1;
        }
    </style>
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-plus-circle"></i> Ajouter un Service</h1>
    <p>Créez un nouveau service médical</p>
</div>

<div class="form-container">
    <div class="form-card">
        <form asp-action="Create" method="post">
            @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> Veuillez corriger les erreurs ci-dessous
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Nom du Service -->
            <div class="form-row full">
                <div class="form-group">
                    <label asp-for="Nom">
                        <i class="fas fa-hospital"></i> Nom du Service
                    </label>
                    <input asp-for="Nom" class="form-control" placeholder="Ex: Cardiologie, Pédiatrie..." />
                    <span asp-validation-for="Nom" class="validation-message"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="form-row full">
                <div class="form-group">
                    <label asp-for="Description">
                        <i class="fas fa-align-left"></i> Description
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Décrivez le service..."></textarea>
                    <small class="form-text">Optionnel</small>
                    <span asp-validation-for="Description" class="validation-message"></span>
                </div>
            </div>

            <!-- Capacité et Emplacement -->
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CapaciteAccueil">
                        <i class="fas fa-door-open"></i> Capacité d'Accueil
                    </label>
                    <input asp-for="CapaciteAccueil" type="number" class="form-control" placeholder="50" />
                    <small class="form-text">Nombre de personnes</small>
                    <span asp-validation-for="CapaciteAccueil" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Emplacement">
                        <i class="fas fa-map-marker-alt"></i> Emplacement
                    </label>
                    <input asp-for="Emplacement" class="form-control" placeholder="Ex: Bâtiment A, Étage 2..." />
                    <small class="form-text">Optionnel</small>
                    <span asp-validation-for="Emplacement" class="validation-message"></span>
                </div>
            </div>

            <!-- Téléphone -->
            <div class="form-row full">
                <div class="form-group">
                    <label asp-for="Telephone">
                        <i class="fas fa-phone"></i> Téléphone
                    </label>
                    <input asp-for="Telephone" class="form-control" placeholder="+212 5XX XXX XXX" />
                    <small class="form-text">Optionnel</small>
                    <span asp-validation-for="Telephone" class="validation-message"></span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
