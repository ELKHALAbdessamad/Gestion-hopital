@model HospitalManagement.Models.DossierMedical
@{
    ViewData["Title"] = "Créer un Dossier Médical";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="PatientId" class="form-label">Patient <span class="text-danger">*</span></label>
                <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId" required>
                    <option value="">-- Sélectionner un patient --</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MedecinId" class="form-label">Médecin <span class="text-danger">*</span></label>
                <select asp-for="MedecinId" class="form-select" asp-items="ViewBag.MedecinId" required>
                    <option value="">-- Sélectionner un médecin --</option>
                </select>
                <span asp-validation-for="MedecinId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Resume" class="form-label">Résumé <span class="text-danger">*</span></label>
                <textarea asp-for="Resume" class="form-control" rows="5" placeholder="Entrez le résumé du dossier médical"></textarea>
                <span asp-validation-for="Resume" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}