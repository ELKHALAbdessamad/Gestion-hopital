@model HospitalManagement.Models.Medecin
@{
    ViewData["Title"] = "Supprimer le Médecin";
}

<h2 class="text-danger">@ViewData["Title"]</h2>
<link rel="stylesheet" href="~/css/medecin-forms-style.css" />
<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Attention !</strong> Cette action est irréversible.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Informations du médecin à supprimer</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nom complet</dt>
                    <dd class="col-sm-8">@Model.Nom @Model.Prenom</dd>

                    <dt class="col-sm-4">Spécialité</dt>
                    <dd class="col-sm-8">@Model.Specialite</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Numéro de licence</dt>
                    <dd class="col-sm-8">@(Model.NumeroLicence ?? "Non renseigné")</dd>

                    <dt class="col-sm-4">Service</dt>
                    <dd class="col-sm-8">@(Model.Service?.Nom ?? "Non assigné")</dd>

                    <dt class="col-sm-4">Date d'embauche</dt>
                    <dd class="col-sm-8">@Model.DateEmbauche.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous absolument sûr de vouloir supprimer ce médecin ?');">
                <i class="fas fa-trash"></i> Confirmer la suppression
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Annuler
            </a>
        </form>
    </div>
</div>