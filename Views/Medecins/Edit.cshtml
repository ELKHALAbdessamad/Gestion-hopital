@model HospitalManagement.Models.Medecin
@{
    ViewData["Title"] = "Modifier un Médecin";
}
<h2>@ViewData["Title"]</h2>
<link rel="stylesheet" href="~/css/medecin-forms-style.css" />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateEmbauche" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-control" placeholder="Entrez le nom" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Prenom" class="form-label"></label>
                <input asp-for="Prenom" class="form-control" placeholder="Entrez le prénom" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Specialite" class="form-label"></label>
                <input asp-for="Specialite" class="form-control" placeholder="Ex: Cardiologie" />
                <span asp-validation-for="Specialite" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="exemple@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NumeroLicence" class="form-label"></label>
                <input asp-for="NumeroLicence" class="form-control" placeholder="Numéro de licence" />
                <span asp-validation-for="NumeroLicence" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ServiceId" class="form-label">Service <span class="text-danger">*</span></label>
                <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId" required>
                    <option value="">-- Sélectionner un service --</option>
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            if ($.validator && $.validator.methods.date) {
                $.validator.methods.date = function (value, element) {
                    return this.optional(element) || !/Invalid|NaN/.test(new Date(value).toString());
                };
            }
        });
    </script>
}